{
  "compilerOptions": {
    "listFiles": true,
    "listEmittedFiles": true,
    "allowJs": true,
    "checkJs": true,  // Report errors in JS files
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "server/**/*",
    "server/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}